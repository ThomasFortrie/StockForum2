		{% block header %}
			<nav class="navbar navbar-light d-flex justify-content-around" style="background-color: #faca9a;">

				<a class="navbar-brand " href="#">
					<img src="{{ asset('images/accueil.png') }}" width="30" height="30" class="d-inline-block align-top" alt="">
					Bootstrap
				</a>

				<img src="{{ asset('images/clavier.png') }}" width="30" height="30" class="" alt="">
				<img src="{{ asset('images/souris.png') }}" width="30" height="30" class="" alt="">
				<img src="{{ asset('images/cable.png') }}" width="30" height="30" class="" alt="">
				<img src="{{ asset('images/ecran.png') }}" width="30" height="30" class="" alt="">
				<img src="{{ asset('images/casque.png') }}" width="30" height="30" class="" alt="">

			</nav>
		{% endblock %}

	</head>
	<body style="min-height: 100%;
  margin: 0;
  padding: 0;">
		{% block body %}{% endblock %}
		{% block form %}{% endblock %}
	</body>
	{% block footer %}
		<footer
			class="wrapper bg-body-tertiary text-center text-lg-start bg-dark-subtle text-dark-emphasis"
      style="">
