{% extends "base.html.twig" %}

{% block body %}
	<tbody>
		<h1>Bienvenue</h1>

		<table class="table table-dark table-striped mx-auto p-2" style="width: 70%; border-radius: 30px;">
			<thead>

				<tr>

					<th scope="col">NOM</th>
					<th scope="col">Quantité</th>
					<th scope="col">Dernière Maj</th>
					<th scope="col">Modif par</th>
					<th scope="col">Ajouter 1</th>
					<th scope="col">Enlever 1</th>
					<th scope="col">Supprimer</th>

				</tr>

			</thead>


			{% for matos in materiels %}
				<tr>

					<td>{{ matos.nom }}</td>
					<td>
						<p class="numberQ">{{ matos.quantite }}</p>
					</td>
					<td>{{ matos.majDate|date('d-m-Y') }}</td>
					<td>{{ matos.lastModif }}</td>
					<td>
						<a href="{{ url('plusOne', {id: matos.id}) }}">
							<img src="{{ asset('images/+1.png') }}" width="40" height="40" class="" alt="">
						</a>
					</td>
					<td>
						<a href="{{ url('minusOne', {id: matos.id}) }}">
							<img src="{{ asset('images/-1.png') }}" width="40" height="40" class="" alt="">
						</a>
					</td>
					<td>
						<a href="{{ url('supprOne', {id: matos.id}) }}">
							<img src="{{ asset('images/supprimer.png') }}" width="40" height="40" class="" alt="">
						</a>
					</td>
				</tr>

			</th>
		{% endfor %}
	</tbody>
</table></tbody>{% endblock %}{% block form %}
<div class="d-flex flex-row mb-3 justify-content-end" style="width: 70%;">Création d'un matériel</div>
<div class=" d-flex flex-row mb-3 justify-content-end" style="width: 70%;">
<div class="p-2 flex-fill"></div>

<div class="p-2 flex-fill"></div>
<div class="px-4 pt-1 flex-xl-fill mb-3" style="background-color: rgb(229, 212, 196); border-radius: 30px;">
	{{ form_start(form) }}{{ form_end(form) }}
</div></div>{% endblock %}
